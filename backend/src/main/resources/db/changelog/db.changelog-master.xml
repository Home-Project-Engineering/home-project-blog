<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xmlns:pro="http://www.liquibase.org/xml/ns/pro"
                     xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
                     http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">
    <changeSet id="post_table" author="Ana">
        <createTable tableName="posts">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="text"/>
            <column name="text" type="text"/>
            <column name="created_on" type="text"/>
            <column name="author_id" type="bigint"/>
            <column name="preview_attachment" type="text"/>
            <column name="updated_on" type="text"/>
        </createTable>
    </changeSet>
    <changeSet id="comment_table" author="Ana">
        <createTable tableName="comments">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="text" type="text"/>
            <column name="post_id" type="bigint"/>
            <column name="author_id" type="bigint"/>
            <column name="created_on" type="text"/>
            <column name="updated_on" type="text"/>
        </createTable>
    </changeSet>
    <changeSet id="tag_table" author="Ana">
        <createTable tableName="tags">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text"/>
        </createTable>
    </changeSet>
    <changeSet id="user_table" author="Ana">
        <createTable tableName="users">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text"/>
            <column name="first_name" type="text"/>
            <column name="last_name" type="text"/>
            <column name="email" type="text"/>
            <column name="password" type="text"/>
            <column name="role_id" type="bigint"/>
        </createTable>
    </changeSet>
    <changeSet id="roleType_table" author="Ana">
        <createTable tableName="role_types">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="text"/>
        </createTable>
    </changeSet>
    <changeSet id="posts_tags_table" author="Ana">
        <createTable tableName="posts_tags">
            <column name="post_entity_id" autoIncrement="true" type="bigint"/>
            <column name="tags_id" autoIncrement="true" type="bigint"/>
        </createTable>
    </changeSet>
    <changeSet id="sequence_creation" author="Ana">
        <createSequence sequenceName="comment_generator"/>
        <createSequence sequenceName="post_generator"/>
        <createSequence sequenceName="role_type_generator"/>
        <createSequence sequenceName="comment_generator"/>
        <createSequence sequenceName="tag_generator" incrementBy="10"/>
        <createSequence sequenceName="user_generator" startValue="4"/>
    </changeSet>
    <changeSet id="role_type_table" author="Ana">
